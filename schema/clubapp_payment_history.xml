<?xml version="1.0" encoding="utf-8"?>
<table name="clubapp_payment_history">
    <column name="id" type="number" size="11" notnull="true" auto_increment="true" />
    <column name="member_id" type="number" size="11" notnull="true" />
    <column name="payment_date" type="date" notnull="true" />
    <column name="amount" type="number" size="11" notnull="true" default="0" />
    <column name="regdate" type="date" />
    
    <primary key>
        <column name="id" />
    </primary key>
    
    <index name="idx_member_id">
        <column name="member_id" />
    </index>
    
    <index name="idx_payment_date">
        <column name="payment_date" />
    </index>
    
    <foreign key name="fk_payment_member">
        <table name="clubapp_members" />
        <column name="member_id" />
        <references column="id" />
        <action on delete="cascade" />
    </foreign>
</table>