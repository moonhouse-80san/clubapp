<?xml version="1.0" encoding="utf-8"?>
<query id="updatePayment" action="update">
    <tables>
        <table name="clubapp_payment_history" />
    </tables>
    <columns>
        <column name="payment_date" var="payment_date" notnull="true" />
        <column name="amount" var="amount" notnull="true" />
    </columns>
    <conditions>
        <condition operation="equal" column="id" var="id" />
        <condition operation="equal" column="member_id" var="member_id" />
    </conditions>
</query>